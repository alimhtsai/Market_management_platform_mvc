@model Product

<div class="form-group pb-3">
    <label class="pb-2" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" type="text" disabled="" />
</div>
<div class="form-group pb-3">
    <label class="pb-2" asp-for="Price"></label>
    <input class="form-control" id="price" type="text" disabled="" value="@(string.Format("{0:c}", @Model.Price))" />
</div>